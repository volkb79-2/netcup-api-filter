# UI Test Environment Configuration
# Source this file before running .vscode/deploy-test-fix-loop.sh
# Usage: source .env.test && .vscode/deploy-test-fix-loop.sh

# ============================================================================
# DEPLOYMENT TARGET
# ============================================================================
export LIVE_URL="https://naf.vxxu.de"

# SSH credentials for deployment (from build-and-deploy.sh)
export NETCUP_USER="hosting218629"
export NETCUP_SERVER="hosting218629.ae98d.netcup.net"
export REMOTE_DIR="/netcup-api-filter"

# ============================================================================
# PLAYWRIGHT CONTAINER
# ============================================================================
export PLAYWRIGHT_CONTAINER_NAME="playwright"
export KEEP_PLAYWRIGHT_RUNNING="1"  # Set to 1 to reuse container between runs

# ============================================================================
# UI TEST CONFIGURATION
# ============================================================================
# Base URL for UI tests (same as LIVE_URL)
export UI_BASE_URL="${LIVE_URL}"

# Admin credentials
# NOTE: Database resets on each deployment, so password starts as "admin"
# After first login, it changes to "TestAdmin123!" automatically
export UI_ADMIN_USERNAME="admin"
export UI_ADMIN_PASSWORD="admin"  # Initial password (changes to TestAdmin123! after first login)
export UI_ADMIN_NEW_PASSWORD="TestAdmin123!"

# Test client credentials (pre-seeded in database)
export UI_CLIENT_ID="test_qweqweqwe_vi"
export UI_CLIENT_TOKEN="qweqweqwe-vi-readonly"
export UI_CLIENT_DOMAIN="qweqweqwe.vi"

# Test behavior
export UI_ALLOW_WRITES="1"  # Allow tests that create/modify/delete data
export PLAYWRIGHT_HEADLESS="true"  # Run browser in headless mode
export UI_SCREENSHOT_PREFIX="ui-test"

